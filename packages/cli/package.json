{
	"bin": {
		"spack": "./bin/spack.js",
		"swc": "./bin/swc.js",
		"swcx": "./bin/swcx.js"
	},
	"dependencies": {
		"@swc/counter": "workspace:^",
		"@xhmikosr/bin-wrapper": "13.0.5",
		"commander": "12.1.0",
		"fast-glob": "3.3.2",
		"minimatch": "10.0.1",
		"piscina": "4.7.0",
		"semver": "7.6.3",
		"slash": "5.1.0",
		"source-map": "0.7.4"
	},
	"description": "CLI for the swc project",
	"devDependencies": {
		"@swc/cli": "0.5.1",
		"@swc/core": "1.9.3",
		"@swc/jest": "workspace:^",
		"@swc/types": "0.1.17",
		"@types/node": "22.10.1",
		"@types/semver": "7.5.8",
		"chokidar": "4.0.1",
		"deepmerge": "4.3.1"
	},
	"files": [
		"bin",
		"lib"
	],
	"main": "lib/swc/index.js",
	"name": "@swc/cli",
	"peerDependenciesMeta": {
		"chokidar": {
			"optional": true
		}
	},
	"scripts": {
		"build": "swc src --strip-leading-paths -d lib --ignore '**/*.test.ts' --ignore '**/__mocks__/**'",
		"build:watch": "swc src --strip-leading-paths -d lib --watch --ignore '**/*.test.ts' --ignore '**/__mocks__/**'",
		"format:examples": "prettier --write examples",
		"format:src": "prettier --write src",
		"prepublishOnly": "pnpm build",
		"test:coverage": "JEST_COVERAGE=true jest --coverage",
		"test:watch": "jest --watch",
		"types": "tsc",
		"types:watch": "tsc --watch"
	}
}
