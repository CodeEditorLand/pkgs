{
	"bin": {
		"spack": "./bin/spack.js",
		"swc": "./bin/swc.js",
		"swcx": "./bin/swcx.js"
	},
	"dependencies": {
		"@swc/counter": "workspace:^",
		"@xhmikosr/bin-wrapper": "^13.0.5",
		"commander": "^8.3.0",
		"fast-glob": "^3.2.5",
		"minimatch": "^9.0.3",
		"piscina": "^4.3.0",
		"semver": "^7.3.8",
		"slash": "3.0.0",
		"source-map": "^0.7.3"
	},
	"description": "CLI for the swc project",
	"devDependencies": {
		"@swc/cli": "0.5.1",
		"@swc/core": "^1.6.4",
		"@swc/jest": "workspace:^",
		"@swc/types": "^0.1.9",
		"@types/node": "^20.11.5",
		"@types/semver": "^7.3.13",
		"chokidar": "^3.5.1",
		"deepmerge": "^4.2.2"
	},
	"files": [
		"bin",
		"lib"
	],
	"main": "lib/swc/index.js",
	"name": "@swc/cli",
	"peerDependenciesMeta": {
		"chokidar": {
			"optional": true
		}
	},
	"scripts": {
		"build": "swc src --strip-leading-paths -d lib --ignore '**/*.test.ts' --ignore '**/__mocks__/**'",
		"build:watch": "swc src --strip-leading-paths -d lib --watch --ignore '**/*.test.ts' --ignore '**/__mocks__/**'",
		"format:examples": "prettier --write examples",
		"format:src": "prettier --write src",
		"prepublishOnly": "pnpm build",
		"test:coverage": "JEST_COVERAGE=true jest --coverage",
		"test:watch": "jest --watch",
		"types": "tsc",
		"types:watch": "tsc --watch"
	}
}
