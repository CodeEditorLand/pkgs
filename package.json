{
	"name": "swc-extra-packages-workspace",
	"funding": {
		"type": "opencollective",
		"url": "https://opencollective.com/swc"
	},
	"scripts": {
		"prepare": "husky install && git config feature.manyFiles true"
	},
	"lint-staged": {
		"!(**/tests/**/*)*.js": [
			"prettier --write"
		],
		"!(**/tests/**/*)*.jsx": [
			"prettier --write"
		],
		"!(**/tests/**/*)*.ts": [
			"prettier --write"
		],
		"!(**/tests/**/*)*.tsx": [
			"prettier --write"
		],
		"**": [
			"prettier --write --ignore-unknown"
		],
		"*.rs": [
			"rustfmt --"
		],
		"*.toml": [
			"taplo format"
		]
	},
	"devDependencies": {
		"@changesets/cli": "2.27.8",
		"@taplo/cli": "0.7.0",
		"cross-env": "7.0.3",
		"cspell": "8.14.4",
		"lerna": "8.1.8",
		"lint-staged": "15.2.10"
	}
}
